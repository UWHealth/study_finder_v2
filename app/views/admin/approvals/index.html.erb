<div class="admin">
  <div class="clearfix">
    <h3 class="pull-left">Approvals History</h3>
    <div class="pull-right header-button">
    <%= link_to 'Pending Trials', admin_all_trials_pending_approval_path, class: 'btn btn-school'%>
    </div>
  </div>
   
  <p class="description">This section is a history of the approval of pending trials.</p>
  <hr/>

  <table class="table table-bordered table-trials">
    <tr>
      <th>User ID</th>
      <th>Trial ID</th>
      <th>Date</th>
    </tr>
   
    <% @approvals.each do |a| %>
      <tr>
        <td><%= User.find(a.user_id).internet_id %></td>
        <td><%= Trial.find(a.trial_id).brief_title %></td>
        <td><%= a.created_at.localtime.strftime('%m/%d/%Y') %></td>
      </tr>
    <% end %>
  </table>
</div>