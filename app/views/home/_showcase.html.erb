<div class="row home-content mt-4 mb-5">
  <h2 class="mt-3 mt-2 ml-1 pl-2">Featured research opportunities</h2>
  <div class="col-12">    
    <div class="d-block">
      <% unless @showcase.empty? %>
        <div id="showcase" class="card-deck">
          <% @showcase.each_with_index do |item, ix| %>
            <div class="card">
              <% unless !item.showcase_image.attached? && item.url.blank? %>
                <% if item.showcase_image.attached? %>
                  <%= image_tag item.showcase_image, class: 'w-100 card-img-top img-fluid d-none d-sm-block' %>
                <% end %>
              <% end %>
              <div class="card-body">
                <div class="card-title" style=""> 
                  <h5 ><%= item.title.to_s %></h5>
                </div>
                <p class="card-text"><%= item.caption.to_s %></p>
              </div>
              <div class="card-footer text-right">
                <%= link_to 'Learn more', item.url, class: 'btn btn-secondary' %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>